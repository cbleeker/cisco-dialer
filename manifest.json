{
    "manifest_version": 2,
    "name": "__MSG_extension_name__",
	"short_name": "Cisco Dialer",
    "description": "__MSG_extension_description__",
    "version": "1.1.5",
    "minimum_chrome_version": "28",
    "author": "Christian Volmering <christian@volmering.name>",
    "default_locale": "en",
    "icons": {
		"16": "/images/extension_icon_16.png",
        "48": "/images/extension_icon_48.png",
        "128": "/images/extension_icon_128.png"
    },
	"omnibox": {
		"keyword": "dial"
	},
    "options_page": "/pages/cisco_dialer_config.htm",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus",
        "http://*/",
		"https://*/",
        "*://mail.google.com/*",
        "*://www.google.com/contacts/*",
        "*://www.google.de/contacts/*"
    ],
    "optional_permissions": [
        "http://*/",
		"https://*/"
    ],
    "content_scripts": [
		{
			"matches": [
				"*://mail.google.com/*",
				"*://www.google.com/contacts/*",
				"*://www.google.de/contacts/*"
			],
			"js": [
				"/scripts/cisco_dialer_sjcl.js",
				"/scripts/cisco_dialer_phone.js",
				"/scripts/cisco_dialer_classes.js",
				"/scripts/cisco_dialer_contacts.js"
			],
			"css": [
				"/styles/cisco_dialer_content.css"
			],
			"run_at": "document_idle",
			"all_frames": true
		},
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"/scripts/cisco_dialer_sjcl.js",
				"/scripts/cisco_dialer_phone.js",
				"/scripts/cisco_dialer_classes.js",
				"/scripts/cisco_dialer_content.js"
			],
			"css": [
				"/styles/cisco_dialer_content.css"
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
    "background": {
        "scripts": [
            "/scripts/cisco_dialer_sjcl.js",
			"/scripts/cisco_dialer_phone.js",
            "/scripts/cisco_dialer_classes.js",
            "/scripts/cisco_dialer_event.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "/images/dial_icon.png",
		"/images/extension_icon_128.png"
    ]
}